BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '0'
            on_text: app.handle_convert(input_number.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2, 1
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
                on_press: app.handle_convert(input_number.text)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
                on_press: app.handle_convert(input_number.text)
    #Button:
    #    text: 'Convert miles to km'
    #    on_press: app.handle_convert(input_number.text)
    Label:
        id: output_box
        text: ''
        color: (1, 1, 0, 1)